<% if current_user and user.id != current_user.id and !current_user.following?(user) %>
  <%= button_to_remote I18n.t("Follow"), {:url => follow_user_path(:user => user)}, :method => :post, :class => "btn follow" %>
<% elsif current_user and current_user.following?(user) %>
  <%= button_to_remote I18n.t("Unfollow"), {:url => follow_user_path(:user => user)}, :method => :post, :class => "btn unfollow" %>
<% elsif !current_user %>
  <%= button I18n.t("Follow"), new_user_path, "btn follow" %>
<% end %>
