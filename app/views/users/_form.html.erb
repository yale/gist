<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label I18n.t("Username") %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label I18n.t("Public name") %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label I18n.t("Email") %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label I18n.t("Password") %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label I18n.t("Password confirmation") %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit I18n.t("Submit") %></p>
<% end %>