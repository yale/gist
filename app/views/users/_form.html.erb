<% form_for @user do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label I18n.t("Username") %>
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label I18n.t("Public name") %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label I18n.t("Email") %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label I18n.t("Password") %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label I18n.t("Password confirmation") %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.check_box :prefers_comment_notification %> <%= I18n.t("Receive email notifications for comments on my definitions") %>
  </p>
  <p>An email will be sent to verify a new email address before being updated</p>
  <p><%= f.submit I18n.t("Save") %></p>
<% end %>