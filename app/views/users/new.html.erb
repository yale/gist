<% title "Sign up"%>

<h2><%=I18n.t("Sign up as a new user")%></h2>
<h1><%=I18n.t("Have an account?")%> <%= link_to I18n.t("Login instead"), login_path %></h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>

<div class="left" id="register-definitious">
  <h3>Create a new Definitious account</h3>
<% form_for :user, :url => users_path do |f| -%>
<p><%= label_tag 'login', I18n.t("Username") %>
<%= f.text_field :login, :size => 20 %></p>

<p><%= label_tag 'name', I18n.t("Public name") %>
<%= f.text_field :name, :size => 20 %><%= "(" + I18n.t("optional") + ")"%></p>

<p><%= label_tag I18n.t("email") %>
<%= f.text_field :email, :size => 20 %></p>

<p><%= label_tag I18n.t("password") %>
<%= f.password_field :password, :size => 20 %></p>

<p><%= label_tag 'password_confirmation', I18n.t("Confirm Password") %>
<%= f.password_field :password_confirmation, :size => 20 %></p>

<p>An activation code will be sent to your email address</p>

<p><%= submit_tag I18n.t("Sign up"), :class => "btn blue" %></p></div>
<% end -%>

<div class="right" id="register-facebook">
<h3><%=I18n.t("Or register with your Facebook account!")%></h3>
<%= fb_login_button('window.location = "/users/link_user_accounts";')%>
</div>
