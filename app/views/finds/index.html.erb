<% title "Search" %>
<%= javascript_include_tag 'external-search' %>

<div class="search-result">
  <% if @word %>
    <h1><%= "#{$query} is not defined. Do you want to define it?" %>			
    <% form_for @word, :url => { :action => "create" } do |f| -%>
      <%= f.error_messages %>
      <%= f.submit I18n.t("Define!")  %>
    <% end -%>
    </h1>
<div class="external-results">
	...or show results from: <br>
	<table>
		<tr><td width="130"><a href=<%="'" + @google_dictionary_url + "'" %>>Google Dictionary</a></td><td width="150"><input type="button" id="searchButton1" value="Show" onclick="search(<%="'" + @google_dictionary_url + "'" %>, 1); this.style.display='none';" display=""/><input type="button" id="toggleButton1" value="Hide" onclick="toggleIframe(1)" style="display: none"/><input type="button" id="sizeButton1" value="Expand" onclick="changeSize(1)" style="display: none"/>
		</td></tr>
		<tr><td><a href=<%="'" + @urban_dictionary_url + "'" %>>Urban Dictionary</a></td><td><input type="button" id="searchButton2" value="Show" onclick="search(<%="'" + @urban_dictionary_url + "'" %>, 2); this.style.display='none';" display=""/><input type="button" id="toggleButton2" value="Hide" onclick="toggleIframe(2)" style="display: none"/><input type="button" id="sizeButton2" value="Expand" onclick="changeSize(2)" style="display: none"/>
		</td></tr>
		<tr><td><a href=<%="'" + @wikipedia_url + "'" %>>Wikipedia</a></td><td><input type="button" id="searchButton3" value="Show" onclick="search(<%="'" + @wikipedia_url + "'" %>, 3); this.style.display='none';" display=""/><input type="button" id="toggleButton3" value="Hide" onclick="toggleIframe(3)" style="display: none"/><input type="button" id="sizeButton3" value="Expand" onclick="changeSize(3)" style="display: none"/>
		</td></tr>
		<tr><td><a href=<%="'" + @thesaurus_url + "'" %>>Thesaurus.com</a></td><td><input type="button" id="searchButton4" value="Show" onclick="search(<%="'" + @thesaurus_url + "'" %>, 4); this.style.display='none';" display=""/><input type="button" id="toggleButton4" value="Hide" onclick="toggleIframe(4)" style="display: none"/><input type="button" id="sizeButton4" value="Expand" onclick="changeSize(4)" style="display: none"/>
		</td></tr>
		</table>
	</table>
</div>
	<iframe id="searchResult1" width="500" height="200" style="display: none" frameborder="0" ></iframe>
	<iframe id="searchResult2" width="500" height="200" style="display: none" frameborder="0"></iframe>
	<iframe id="searchResult3" width="500" height="200" style="display: none" frameborder="0" ></iframe>
	<iframe id="searchResult4" width="500" height="200" style="display: none" frameborder="0" ></iframe>
  <% else %>
    <h1><%= "Sorry. We could not find the user #{$query}." %></h1>
  <% end %>
</div>