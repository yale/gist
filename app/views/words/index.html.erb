<h1>Random word</h1>

<div id="random_word">
  <%= render :partial => 'words/result', :locals => {:word => @random, :definition => @random_def } %>
</div>
<h2>Add a word</h2>
<% form_for @word, :url => { :action => "create" } do |f| -%>
  <%= f.error_messages %>
  <p><%= f.text_field :name %><%= f.submit 'Create'  %></p>
<% end -%>
