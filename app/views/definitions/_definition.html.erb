<li class="definition" id="definition-<%= definition.id %>">
  <%=h definition.body %>
  <%= render :partial => 'definitions/stats', :locals => {:definition => definition} %>
  <% if definition.comments.count > 0 %>
  <%= render :partial => 'comments/comments', :locals => {:comments => definition.comments.recent.limit(10).all} %>
  <% end %>
  <% if current_user %>
    <%= render :partial => 'comments/form', :locals => {:definition => definition} %>
  <% end %>
</li>