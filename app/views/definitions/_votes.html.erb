<span class="votes" id="votes-definition-<%=h definition.id %>"><%= definition.percent_liked %>% <%= I18n.t("liked, by") %>
  <% @user = User.find(definition.user_id) unless definition.user_id.nil?%>
  <%=link_to(@user.username, @user) + " " + I18n.t("on") + " " + definition.created_at.strftime("%B %d, %Y") + "." %><br>
  <% definition_type = definition.definition_type + definition.definition_type_negative %>
  <% if !definition_type.empty? %>
      <%=I18n.t("Voted as")%> <%= itemize_type definition_type %>.
  <% end %>
</span>